def solution(n, lost, reserve):
    num_1 = n
    d1 = [1 for j in range(0,num_1)]
    for j in lost:
        d1[j-1] -= 1
    for k in reserve:
        d1[k-1] += 1
    
    for h in range(0,n):
        if d1[h] == 0:
            if d1[h+1] == 2:
                d1[h+1] -=1
                d1[h] += 1
            elif d1[h-1] == 2:
                d1[h-1] -= 1
                d1[h] += 1
    num_2 = d1.count(0)
    answer = n - num_2
    return answer
            
