def solution(s):
    s = s.lower()
    p_1 = 0
    y_1 = 0
    if "p" not in s and "y" not in s:
        return True
    else:
        for j in s:
            if j == "p":
                p_1 += 1
            elif j == "y":
                y_1 += 1
    if p_1 == y_1:
        return True
    else:
        return False
        
    
    
        
    
    
            
